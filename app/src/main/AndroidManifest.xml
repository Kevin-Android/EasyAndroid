<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.kevin.easyandroid"
    tools:ignore="LockedOrientationActivity">


    <application
        android:name=".DuckApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_duck"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_duck_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EasyAndroid">

        <activity
            android:name=".ui.activity.SplashActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MaterialComponents.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.LoginActivity"
            android:exported="false"
            android:label="@string/app_login"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.MainActivity"
            android:exported="false"
            android:label="@string/app_home"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
    </application>

</manifest>